<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.arnoldas.mathteacher.classStats"
    tools:showIn="@layout/activity_class_stats">

    <TableLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        android:layout_margin="0dp"
        android:padding="10dp"
        android:stretchColumns="2"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/additionAverageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Addition Average:" />

            <TextView
                android:id="@+id/additionAverage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="0%" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/subtractionAverageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subtraction Average:" />

            <TextView
                android:id="@+id/subtractionAverage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="0%" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/multiplicationAverageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Multiplication Average:" />

            <TextView
                android:id="@+id/multiplicationAverage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="0%" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/divisionAverageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Division Average:" />

            <TextView
                android:id="@+id/divisionAverage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="0%" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/overallAverageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Overall Average::" />

            <TextView
                android:id="@+id/overallAverage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="0%" />
        </TableRow>
    </TableLayout>
</android.support.constraint.ConstraintLayout>
